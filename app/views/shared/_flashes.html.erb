<%= turbo_frame_tag :flashes do %>
  <div class="fixed inset-x-0 bottom-0 flex justify-right px-4 py-4 sm:py-6 sm:p-6 flex-col items-end pointer-events-none" style="z-index:1000">
    <div class="max-w-md w-full space-y-2">
      <%# NOTICE %>
      <% if notice %>
        <div data-controller="alert" class="rounded-md bg-white p-4 border border-tertiary-800 pointer-events-auto shadow">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-success-500" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <p class="text-sm font-medium text-success-900"><%= notice %></p>
            </div>
            <div class="ml-auto pl-3">
              <div class="-mx-1.5 -my-1.5">
                <button type="button" data-action="click->alert#dismiss" class="inline-flex rounded-md bg-white p-1.5 text-tertiary-500 hover:bg-tertiary-100 focus:outline-none focus:ring-2 focus:ring-tertiary-600 focus:ring-offset-2 focus:ring-offset-tertiary-50">
                  <span class="sr-only">Dismiss</span>
                  <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                    <path d="M6.28 5.22a.75.75 0 00-1.06 1.06L8.94 10l-3.72 3.72a.75.75 0 101.06 1.06L10 11.06l3.72 3.72a.75.75 0 101.06-1.06L11.06 10l3.72-3.72a.75.75 0 00-1.06-1.06L10 8.94 6.28 5.22z" />
                  </svg>
                </button>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <%# ALERT %>
      <% if alert %>
        <div data-controller="alert" class="rounded-md bg-white p-4 border border-tertiary-900 pointer-events-auto shadow">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="h-5 w-5 text-danger-500">
                <path fill-rule="evenodd" d="M12 2.25c-5.385 0-9.75 4.365-9.75 9.75s4.365 9.75 9.75 9.75 9.75-4.365 9.75-9.75S17.385 2.25 12 2.25zm-1.72 6.97a.75.75 0 10-1.06 1.06L10.94 12l-1.72 1.72a.75.75 0 101.06 1.06L12 13.06l1.72 1.72a.75.75 0 101.06-1.06L13.06 12l1.72-1.72a.75.75 0 10-1.06-1.06L12 10.94l-1.72-1.72z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <p class="text-sm font-medium text-danger-900"><%= alert %></p>
            </div>
            <div class="ml-auto pl-3">
              <div class="-mx-1.5 -my-1.5">
                <button type="button" data-action="click->alert#dismiss" class="inline-flex rounded-md bg-white p-1.5 text-tertiary-500 hover:bg-tertiary-100 focus:outline-none focus:ring-2 focus:ring-tertiary-600 focus:ring-offset-2 focus:ring-offset-tertiary-50">
                  <span class="sr-only">Dismiss</span>
                  <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                    <path d="M6.28 5.22a.75.75 0 00-1.06 1.06L8.94 10l-3.72 3.72a.75.75 0 101.06 1.06L10 11.06l3.72 3.72a.75.75 0 101.06-1.06L11.06 10l3.72-3.72a.75.75 0 00-1.06-1.06L10 8.94 6.28 5.22z" />
                  </svg>
                </button>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>