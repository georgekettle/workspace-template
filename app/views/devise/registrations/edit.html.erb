<div class="container-xs">
  <%= render 'components/headers/header_center', title: 'Account Settings' %>

  <div class="space-y-10">
    <%= render 'components/cards/card_section', title: 'Account Details', icon: 'user' do %>
      <%= simple_form_for(current_user, url: user_path(current_user), html: { method: :patch }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= render 'components/avatars/avatar', user: current_user, size: :xxl %>
          <%= f.input :first_name, required: true, autofocus: true %>
          <%= f.input :last_name, required: true, autofocus: true %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Update Details", class: 'w-full' %>
        </div>
      <% end %>
    <% end %>

    <%= render 'components/cards/card_section', title: 'Change Email', icon: 'envelope-simple' do %>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email, required: true, autofocus: true %>

          <%= f.input :current_password,
                      hint: "we need your current password to confirm your changes",
                      required: true,
                      input_html: { autocomplete: "current-password" } %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Update Email", class: 'w-full' %>
        </div>
      <% end %>
    <% end %>

    <%= render 'components/cards/card_section', title: 'Change Password', icon: 'password' do %>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :password,
                      hint: "leave it blank if you don't want to change it",
                      required: false,
                      input_html: { autocomplete: "new-password" } %>
          <%= f.input :password_confirmation,
                      required: false,
                      input_html: { autocomplete: "new-password" } %>
          <%= f.input :current_password,
                      hint: "we need your current password to confirm your changes",
                      required: true,
                      input_html: { autocomplete: "current-password" } %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Update Password", class: 'w-full' %>
        </div>
      <% end %>
    <% end %>

    <%= render 'components/cards/card_section', title: 'Cancel Account', icon: 'user-circle-minus' do %>
      <div class="md:flex items-center justify-between">
        <div class="space-y-1">
          <h3 class="h6 text-base">Cancel my account</h3>
          <p>Once you delete your account, there is no going back. Please be certain.</p>
        </div>
        <%= link_to "Cancel my account", registration_path(resource_name), class: "btn btn-small btn-danger mt-4 md:mt-0", data: { turbo_confirm: "Are you sure?", turbo_method: :delete } %>
      </div>
    <% end %>
  </div>
</div>