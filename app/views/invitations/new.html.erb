<div class="container-xs">
    <%= render 'components/headers/header_center', title: "Invite Members" %>
    
    <div class="space-y-10">
        <%= render 'components/cards/card_section' do %>
            <%= simple_form_for(:invitation, url: workspace_invitations_path(@workspace)) do |f| %>
                <div class="form-inputs">
                    <%= f.input :emails, as: :text, required: true, input_html: { value: nil }, hint: "Separate multiple emails with commas", placeholder: "email1@mail.com, email2@mail.com" %>
                </div>

                <div class="form-actions">
                    <%= f.button :submit, "Send Invites", class: 'w-full' %>
                </div>
            <% end %>
        <% end %>
    </div>
</div>